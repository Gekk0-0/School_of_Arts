@model IEnumerable<School_of_arts.Models.AffiliationWithDepartment>

@{
    ViewData["Title"] = "Приналежність до відділу";
}

<h1>Приналежність до відділу</h1>

<p>
    <a asp-action="Create" class="btn-create">
        <i class="bi bi-plus-lg"></i> Додати приналежність
    </a>
</p>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="admin-card-title">🔍 Пошук та фільтрація</h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Викладач:</label>
                    <select name="teacherId" class="form-select" asp-items="ViewBag.TeacherList">
                        <option value="">— Всі викладачі —</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Дисципліна:</label>
                    <select name="disciplineId" class="form-select" asp-items="ViewBag.DisciplineList">
                        <option value="">— Всі дисципліни —</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Тип зайнятості:</label>
                    <input type="text" name="occupationType" class="form-control"
                           value="@ViewData["CurrentOccupation"]" placeholder="Напр. Основна..." />
                </div>

                <partial name="_FilterButtons" />

            </div>
        </form>
    </div>
</div>

@if (ViewData["Count"] != null)
{
    <div class="alert alert-info py-2">
        Знайдено записів: <strong>@ViewData["Count"]</strong>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="admin-table-head">
        <tr>
            <th>Ставка</th>
            <th>Тип зайнятості</th>
            <th>Викладач</th>
            <th>Дисципліна</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><span class="badge bg-primary fs-6">@Html.DisplayFor(modelItem => item.WageRate)</span></td>
                <td><span class="badge bg-secondary text-white">@Html.DisplayFor(modelItem => item.OccupationType)</span></td>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Teacher.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Discipline.SubjectName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AffiliationWithDepartmentId">Виправити</a> |
                    <a asp-action="Details" asp-route-id="@item.AffiliationWithDepartmentId">Інформація</a> |
                    <a asp-action="Delete" asp-route-id="@item.AffiliationWithDepartmentId">Видалити</a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted py-3">Записів не знайдено</td>
            </tr>
        }
    </tbody>
</table>