@model IEnumerable<School_of_arts.Models.Position>

@{
    ViewData["Title"] = "Positions";
}

<h1>Посади</h1>

<p>
    <a asp-action="Create">Додати посаду</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Посада</th>
            <th>Мінімальний оклад</th>
            <th>Опис обов'язків</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PositionName)</td>
                <td>@Html.DisplayFor(modelItem => item.MinSalary)</td>
                <td>@Html.DisplayFor(modelItem => item.DutiesDescription)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Виправити</a> |
                    <a asp-action="Details" asp-route-id="@item.PositionId">Інформація</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
