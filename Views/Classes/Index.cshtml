@model IEnumerable<School_of_arts.Models.Class>

@{
    ViewData["Title"] = "Класи";
}

<h1>Групи (Класи)</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Додати групу
    </a>
</p>

<div class="card mb-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">🔍 Пошук та фільтрація</h5>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Назва групи:</label>
                    <input type="text" name="searchName" class="form-control"
                           value="@ViewData["CurrentName"]" placeholder="Напр. МУЗ-1..." />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Відділ:</label>
                    <select name="departmentId" class="form-select" asp-items="ViewBag.DepartmentList">
                        <option value="">— Всі відділи —</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Куратор:</label>
                    <select name="curatorId" class="form-select" asp-items="ViewBag.CuratorList">
                        <option value="">— Всі куратори —</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-search"></i> Знайти
                    </button>
                    <a asp-action="Index" class="btn btn-secondary w-100">Скинути</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewData["Count"] != null)
{
    <div class="alert alert-info py-2">
        Знайдено груп: <strong>@ViewData["Count"]</strong>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Назва класу</th>
            <th>Відділ</th>
            <th>Фахова дисципліна</th>
            <th>Куратор</th>
            <th>Рік навчання</th>
            <th>Термін</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.ClassName)</td>

                <td>
                    <span class="badge bg-secondary">
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </span>
                </td>

                <td>
                    @if (item.Specialty?.Discipline != null)
                    {
                        @Html.DisplayFor(modelItem => item.Specialty.Discipline.SubjectName)
                    }
                    else
                    {
                        <span class="text-muted">Не вказано</span>
                    }
                </td>

                <td>@Html.DisplayFor(modelItem => item.Curator.FullName)</td>

                <td class="text-center">@Html.DisplayFor(modelItem => item.StudyYear)</td>

                <td>
                    <span class="badge bg-info text-dark">
                        @Html.DisplayFor(modelItem => item.TermYears) р.
                    </span>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClassId">Виправити</a> |
                    <a asp-action="Details" asp-route-id="@item.ClassId">Інформація</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClassId">Видалити</a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-3">
                    Груп не знайдено
                </td>
            </tr>
        }
    </tbody>
</table>