@model IEnumerable<School_of_arts.Models.Teacher>

@{
    ViewData["Title"] = "Викладачі";
}

<h1>Викладачі</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Додати викладача
    </a>
</p>

<div class="card mb-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">🔍 Пошук та фільтрація</h5>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">ПІБ Викладача:</label>
                    <input type="text" name="searchName" class="form-control"
                           value="@ViewData["CurrentName"]" placeholder="Введіть частину імені...">
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Зарплата (грн):</label>
                    <div class="input-group">
                        <span class="input-group-text">від</span>
                        <input type="number" name="minSalary" step="0.01" class="form-control"
                               value="@ViewData["MinSalary"]">
                        <span class="input-group-text">до</span>
                        <input type="number" name="maxSalary" step="0.01" class="form-control"
                               value="@ViewData["MaxSalary"]">
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Дата народження:</label>
                    <div class="input-group">
                        <span class="input-group-text">з</span>
                        <input type="date" name="dateFrom" class="form-control"
                               value="@ViewData["DateFrom"]">
                        <span class="input-group-text">по</span>
                        <input type="date" name="dateTo" class="form-control"
                               value="@ViewData["DateTo"]">
                    </div>
                </div>

                <div class="col-12 text-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-2">Скинути</a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-search"></i> Застосувати фільтри
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewData["Count"] != null && (int)ViewData["Count"] > 0)
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <span>Знайдено записів: <strong>@ViewData["Count"]</strong></span>
        <span>
            Середня зарплата (серед знайдених):
            <strong>@String.Format("{0:0.00}", ViewData["AverageSalary"]) грн</strong>
        </span>
    </div>
}
else
{
    <div class="alert alert-warning">
        За вашим запитом нікого не знайдено.
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>ПІБ Викладача</th>
            <th>Номер телефону</th>
            <th>Дата народження</th>
            <th>Зарплата (у грн)</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@item.Birthdate.ToString("dd.MM.yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherId">Виправити</a> |
                    <a asp-action="Details" asp-route-id="@item.TeacherId">Інформація</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeacherId">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>