@model School_of_arts.Models.Teacher

@{
    ViewData["Title"] = "Створити викладача";
}

<h1>Створити</h1>

<h4>Викладач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">ПІБ Викладача</label>
                <input asp-for="FullName" class="form-control" placeholder="Введіть прізвище та ім'я" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label">Номер телефону</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+380..." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Birthdate" class="control-label">Дата народження</label>
                <input asp-for="Birthdate" type="date" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Salary" class="control-label">Зарплата (грн)</label>
                <input asp-for="Salary" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/decimal-fix.js"></script>
}