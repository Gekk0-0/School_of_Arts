@using System.Linq
@model IEnumerable<School_of_arts.Models.PupilRatingViewModel>

@{
    ViewData["Title"] = "Рейтинг успішності";
}

<h1>Рейтинг успішності учнів</h1>

<div class="card mb-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">🔍 Фільтрація рейтингу</h5>
    </div>
    <div class="card-body bg-light">
        <form method="get" asp-action="Index">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Оберіть клас:</label>
                    <select name="classId" class="form-select"
                            asp-items="ViewBag.ClassList">
                        <option value="">— Загальний рейтинг по школі —</option>
                    </select>
                </div>

                <div class="col-md-8">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-filter"></i> Показати
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Учень</th>
            <th>Клас</th>
            <th>Середній бал</th>
        </tr>
    </thead>
    <tbody>
        @{
            int rank = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold text-secondary">@(rank++)</td>

                <td>@Html.DisplayFor(modelItem => item.FullName)</td>

                <td>
                    <span class="badge bg-info text-dark" style="font-size: 0.9em;">
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </span>
                </td>

                <td>
                    @if (item.AverageMark >= 10)
                    {
                        <span class="badge bg-success fs-6">@item.AverageMark.ToString("0.00")</span>
                    }
                    else if (item.AverageMark >= 7)
                    {
                        <span class="badge bg-primary fs-6">@item.AverageMark.ToString("0.00")</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark fs-6">@item.AverageMark.ToString("0.00")</span>
                    }
                </td>
            </tr>
        }

        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-3">
                    Даних не знайдено
                </td>
            </tr>
        }
    </tbody>
</table>