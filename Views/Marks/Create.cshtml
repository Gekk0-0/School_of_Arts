@model School_of_arts.Models.Mark

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Оцінка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mark1" class="control-label"></label>
                <input asp-for="Mark1" class="form-control" />
                <span asp-validation-for="Mark1" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPresent" /> @Html.DisplayNameFor(model => model.IsPresent)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DisciplineId" class="control-label">Предмет</label>
                @{
                    var disciplineList = ViewBag.DisciplineId as SelectList;
                }
                @if (disciplineList != null && disciplineList.Any())
                {
                    <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
                }
                else
                {
                    <div class="alert alert-warning mt-2">
                        Список предметів порожній.
                        <a asp-controller="Disciplines" asp-action="Create" class="alert-link">Додати предмет</a>.
                    </div>
                }
            </div>
            <div class="form-group mb-3">
                <label asp-for="PupilId" class="control-label">Учень</label>
                @{
                    var pupilList = ViewBag.PupilId as SelectList;
                }
                @if (pupilList != null && pupilList.Any())
                {
                    <select asp-for="PupilId" class="form-control" asp-items="ViewBag.PupilId"></select>
                }
                else
                {
                    <div class="alert alert-danger mt-2">
                        Неможливо поставити оцінку: у базі немає учнів.
                        <a asp-controller="Pupils" asp-action="Create" class="alert-link">Додати учня</a>.
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="RatingDate" class="control-label"></label>
                <input asp-for="RatingDate" class="form-control" />
                <span asp-validation-for="RatingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
