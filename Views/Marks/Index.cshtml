@model IEnumerable<School_of_arts.Models.Mark>

@{
    ViewData["Title"] = "Оцінки";
}

<h1>Оцінки</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Додати оцінку
    </a>
</p>

<div class="card mb-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">🔍 Пошук та фільтрація</h5>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-bold">ПІБ Учня:</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                           class="form-control" placeholder="Введіть прізвище..." />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Предмет:</label>
                    <select name="disciplineId" class="form-select" asp-items="ViewBag.DisciplineId">
                        <option value="">— Всі предмети —</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-search"></i> Знайти
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Скинути</a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Оцінка</th>
            <th>Присутність</th>
            <th>Предмет</th>
            <th>Учень</th>
            <th>Дата</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Mark1 >= 10)
                    {
                        <span class="badge bg-success fs-6">@Html.DisplayFor(modelItem => item.Mark1)</span>
                    }
                    else if (item.Mark1 >= 7)
                    {
                        <span class="badge bg-primary fs-6">@Html.DisplayFor(modelItem => item.Mark1)</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark fs-6">@Html.DisplayFor(modelItem => item.Mark1)</span>
                    }
                </td>

                <td>
                    @if (item.IsPresent)
                    {
                        <span class="badge bg-success">Присутній</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Відсутній</span>
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Discipline.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pupil.FullName)
                </td>
                <td>
                    @item.RatingDate.ToShortDateString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MarkId">Виправити</a> |
                    <a asp-action="Details" asp-route-id="@item.MarkId">Інформація</a> |
                    <a asp-action="Delete" asp-route-id="@item.MarkId">Видалити</a>
                </td>
            </tr>
        }

        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted py-3">
                    Записів не знайдено
                </td>
            </tr>
        }
    </tbody>
</table>