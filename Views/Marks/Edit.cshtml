@model School_of_arts.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<h1>Виправити</h1>

<h4>Оцінка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MarkId" />
            <div class="form-group">
                <label asp-for="Mark1" class="control-label"></label>
                <input asp-for="Mark1" class="form-control" />
                <span asp-validation-for="Mark1" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPresent" /> @Html.DisplayNameFor(model => model.IsPresent)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PupilId" class="control-label"></label>
                <select asp-for="PupilId" class="form-control" asp-items="ViewBag.PupilId"></select>
                <span asp-validation-for="PupilId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingDate" class="control-label"></label>
                <input asp-for="RatingDate" class="form-control" />
                <span asp-validation-for="RatingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/decimal-fix.js"></script>
}
